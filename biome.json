{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useValidAnchor": "off",
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "useOptionalChain": "off"
      },
      "nursery": {
        "useComponentExportOnlyModules": "error"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "noUnknownProperty": "off"
      }
    }
  },
  "files": {
    "ignore": ["dist"]
  },
  "formatter": {
    "enabled": true
  }
}
